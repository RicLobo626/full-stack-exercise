{
  "type": "module",
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "module": "dist/index.js",
  "prisma": {
    "schema": "src/prisma/schema",
    "seed": "tsx src/prisma/seed"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "pkgroll",
    "test": "dotenv -e .env.test -- node --import tsx --test src/test/**/*.test.ts",
    "lint": "eslint .",
    "generate:prisma-client": "prisma generate",
    "migrate:dev": "prisma migrate dev --name",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "migrate:test-db": "dotenv -e .env.test -- npx prisma migrate deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "pkgroll": "^2.5.1",
    "prisma": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "dependencies": {
    "@apollo/server": "^4.11.2",
    "@graphql-tools/schema": "^10.0.11",
    "@prisma/client": "^6.0.1",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.4",
    "graphql": "^16.9.0"
  }
}
